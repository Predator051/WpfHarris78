<Page x:Class="HarrisUser.Pages.LessonListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:PdfViewer="clr-namespace:Syncfusion.Windows.PdfViewer;assembly=Syncfusion.PdfViewer.WPF" 
      xmlns:local="clr-namespace:HarrisUser.Pages"
      mc:Ignorable="d" 
      Width="780" Height="539"
      Title="LessonListPage">

    <Grid>
        <ListBox x:Name="lbLessons" HorizontalAlignment="Left" Height="423" Margin="10,10,0,0" VerticalAlignment="Top" Width="267" SelectionChanged="lbLessons_SelectionChanged"/>
        <Button x:Name="btnOpen" Content="Почати" HorizontalAlignment="Left" Margin="202,438,0,0" VerticalAlignment="Top" Width="75" Style="{StaticResource UIButton}" Click="btnOpen_Click"/>

        <PdfViewer:PdfDocumentView x:Name="pdfViewerLesson" HorizontalAlignment="Left" Margin="282,10,0,0" VerticalAlignment="Top" Width="488" Height="519"/>

    </Grid>
</Page>
